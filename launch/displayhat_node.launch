<!--xml-->
<launch>
<node name="$(env ROS_HOSTNAME)_displayhat_node" pkg="ros_display_hats" type="display_hatnode"  output="screen" clear_params="true">
        <param name="startup_delay"       value="0.0"/>
	    <param name="verbosity_level"       value="DEBUG"/>
        <param name="require_pps_to_start"  value="false"/>    
        <param name="loop1_rate"            value="1"/> 
        <param name="loop2_rate"            value="20"/>
</node>
</launch>
